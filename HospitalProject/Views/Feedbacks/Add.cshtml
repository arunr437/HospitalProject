@model IEnumerable<HospitalProject.Models.FeedbackTypes>
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
    <h2>Give us Feedback!</h2>
    <p class="text-muted">Please fillout the fields below</p>
    <form method="post" action="/Feedbacks/Add">
        
        <div class="form-row ">
            <div class="form-group col-md-6">
                <label>First Name:</label>
                <input type="text" name="fname" class="form-control" />

            </div>
            <div class="form-group col-md-6">
                <label>Last Name:</label>
                <input type="text" name="lname" class="form-control" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Email:</label>
                <input type="text" name="email" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label>Feedback Type:</label>
                <select name="type" class="form-control">

                    @foreach (var item in Model)
                    {
                        <option value="@item.typeId" class="dropdown-item">@item.name</option>
                    }

                </select>
            </div>
        </div>
        <div class="form-group">
            <label >Feedback:</label>
            <textarea name="feedback" class="form-control" rows="5">

            </textarea>
        </div>
        <input type="submit" value="Submit" class="btn btn-success" />
    </form>
</section>

