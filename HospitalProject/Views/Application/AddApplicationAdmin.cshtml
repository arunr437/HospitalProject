@model List<HospitalProject.Models.Job>
@{
    ViewBag.Title = "AddApplicationAdmin";
}

<section class="jobMain">
    <h2>Add Applications</h2>

    @*Below form is used to Add a new application into the Application Table*@
    <form method="post" href="/Application/AddApplicationAdmin">
        <div class="form-group">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Job:</label>
                <select name="jobId">
                    @{
                        //List of jobs to choose, for which the Admin is going to create a new application
                        foreach (var job in Model)
                        {
                            <option value="@job.jobId">@job.name</option>
                        }
                    }
                 </select>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">First Name:</label>
                <input class="form-control" id="firstName" name="firstName" type="text" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Last Name:</label>
                <input class="form-control" id="lastName" name="lastName" type="text" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email ID:</label>
                <input class="form-control" id="emailId" name="emailId" type="text" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Cover Letter:</label>
                <textarea class="form-control" id="coverLetter" name="coverLetter" rows="6" type="text"></textarea>
            </div>
        </div>
        <!-- Link styled as a button to go back to the list page-->
        <a class="btn btn-default" href="/FrequentlyAskedQuestion/ListFAQAdmin">Back</a>
        <!-- Button to submit the form-->
        <input type="submit" class="btn btn-primary" value="Add Job">
    </form>
</section>

